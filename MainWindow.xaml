<Window x:Class="Maron.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maron"
        mc:Ignorable="d"
        Title="Maron" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#222222">
            <Button x:Name ="HomeButton" Margin="10" Height="30" Content="Home" Click="HomePage"/>
            <Button x:Name ="SetsButton" Margin="10" Height="30" Content="Sets" Click="SetsPage"/>
            <Button x:Name ="StatsButton" Margin="10" Height="30" Content="Stats" Click="StatsPage"/>
            <Button x:Name ="SettingsButton" Margin="10" Height="30" Content="Settings" Click="SettingsPage"/>
        </StackPanel>

        <Grid Grid.Column="1" Background="#444444"/>

        <Grid Grid.Column="2" Background="#1e1e1e">
            <Frame x:Name="MainFrame"/>
        </Grid>
        </Grid>
</Window>
