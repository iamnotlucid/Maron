<Page x:Class="Maron.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Maron"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Home">

    <Grid Background="#1e1e1e">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="NextDueText" Grid.Row="0" Grid.Column="0" Text="Next due sets:" Foreground="DarkGray" FontSize="18" Height ="30" Margin="15" VerticalAlignment="Top" FontWeight="Bold"/>

        <ItemsControl x:Name="StudySets" Grid.Row="0" Grid.Column="0" Margin="10,45,10,10">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="#222222"  BorderThickness="2" Padding="5" Margin="5" CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" Foreground="White" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Subject}" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding DueDate, StringFormat='Due Date: {0:MM/dd/yyyy}'}" Foreground="LightGray" FontSize="12"/>
                            <Button Background="#1e1e1e" Content="Start"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Statistics:" FontSize="18" Margin="15" Height="30" VerticalAlignment="Top" Foreground="DarkGray" FontWeight="Bold"/>
    </Grid>
</Page>
